  <div class="container">
    <h1>Cozy Session Timer</h1>

    <div class="timer-display" id="timer">00:00</div>

    <div class="activity-selector">
      <button class="activity-btn" data-time="15">Quick (15 mins)</button>
      <button class="activity-btn" data-time="45">Relaxed (45 mins)</button>
      <button class="activity-btn" data-time="30">Comfy (60 mins)</button>
    </div>

    <div class="controls">
      <button id="start-btn">Start</button>
      <button id="reset-btn">Reset</button>
    </div>
  </div>

  <script>
    let countdown;
    let timeRemaining = 0;
    let timerActive = false;

    const timerDisplay = document.getElementById('timer');
    const startButton = document.getElementById('start-btn');
    const resetButton = document.getElementById('reset-btn');
    const activityButtons = document.querySelectorAll('.activity-btn');

    function startTimer() {
      if (timerActive) return;
      timerActive = true;
      countdown = setInterval(() => {
        timeRemaining--;
        updateTimerDisplay();
        if (timeRemaining <= 0) {
          clearInterval(countdown);
          timerActive = false;
          alert("Time's up!");
        }
      }, 1000);
    }

    function resetTimer() {
      clearInterval(countdown);
      timerActive = false;
      timeRemaining = 0;
      updateTimerDisplay();
    }

    function updateTimerDisplay() {
      const minutes = Math.floor(timeRemaining / 60);
      const seconds = timeRemaining % 60;
      timerDisplay.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
    }

    activityButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const timeInMinutes = parseInt(e.target.getAttribute('data-time'));
        timeRemaining = timeInMinutes * 60; // Convert to seconds
        updateTimerDisplay();
      });
    });

    startButton.addEventListener('click', startTimer);
    resetButton.addEventListener('click', resetTimer);
  </script>

</body>
